---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata | string;
  alt: string;
  width?: number;
  height?: number;
  format?: 'avif' | 'webp' | 'jpeg' | 'png';
  fallbackFormat?: 'avif' | 'webp' | 'jpeg' | 'png';
  loading?: 'lazy' | 'eager';
  class?: string;
}

const {
  src,
  alt,
  width,
  height,
  format = 'avif',
  fallbackFormat = 'webp',
  loading = 'lazy',
  class: className,
  ...rest
} = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  format={format}
  fallbackFormat={fallbackFormat}
  loading={loading}
  class={className}
  {...rest}
/>
