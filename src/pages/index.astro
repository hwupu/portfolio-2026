---
import { Icon } from "astro-icon/components";

import BaseLayout from "@/layouts/BaseLayout.astro";
import avatar from "@/assets/images/gura.jpg";
---

<BaseLayout description="Front-end developer portfolio">
    <main class="mx-auto max-w-3xl">
        <section class="grid place-items-center w-full min-h-screen px-4 py-8">
            <div class="flex flex-col gap-6 items-center">
                <img
                    src={avatar.src}
                    alt="Logo"
                    class="rounded-full"
                    width="100"
                    height="100"
                />
                <h1 class="text-3xl font-semibold">
                    <span class="sr-only">Personal profile of </span>Henry Wu
                </h1>
                <p>MSCS @ NYCU</p>
                <ul class="flex gap-4">
                    {
                        [
                            {
                                name: "GitHub",
                                icon: "pixel:github",
                                href: "https://github.com/hwupu",
                            },
                            {
                                name: "LinkedIn",
                                icon: "pixel:linkedin",
                                href: "https://www.linkedin.com/in/puhsuanwu",
                            },
                            {
                                name: "Twitter",
                                icon: "pixel:twitter",
                                href: "https://x.com/hwupu",
                            },
                        ].map((item) => (
                            <li key={item.name}>
                                <a
                                    href={item.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="no-icon"
                                >
                                    <Icon name={item.icon} size="32" />
                                    <span class="sr-only">{item.name}</span>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </section>
    </main>
</BaseLayout>
