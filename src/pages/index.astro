---
import { Icon } from "astro-icon/components";

import BaseLayout from "@/layouts/BaseLayout.astro";
import Footer from "@/components/layout/Footer.astro";
import { H2, Section } from "@/components/common";
import avatar from "@/assets/images/gura.jpg";
---

<BaseLayout description="Front-end developer portfolio">
    <main>
        <section
            class="relative isolate grid place-items-center w-full min-h-screen px-4 py-8"
        >
            <div id="pixel-bg" class="absolute inset-0 -z-1" aria-hidden="true">
            </div>
            <div class="flex flex-col gap-6 items-center">
                <img
                    src={avatar.src}
                    alt="Logo"
                    class="rounded-full"
                    width="100"
                    height="100"
                />
                <h1 class="text-3xl font-semibold">
                    <span class="sr-only">Personal profile of </span>Henry Wu
                </h1>
                <p>MSCS @ NYCU</p>
                <ul class="flex gap-4">
                    {
                        [
                            {
                                name: "GitHub",
                                icon: "pixel:github",
                                href: "https://github.com/hwupu",
                            },
                            {
                                name: "LinkedIn",
                                icon: "pixel:linkedin",
                                href: "https://www.linkedin.com/in/puhsuanwu",
                            },
                            {
                                name: "Twitter",
                                icon: "pixel:twitter",
                                href: "https://x.com/hwupu",
                            },
                        ].map((item) => (
                            <li key={item.name}>
                                <a
                                    href={item.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="no-icon text-current dark:text-current opacity-60 hover:opacity-100 focus-visible:opacity-100 motion-safe:transition-opacity"
                                >
                                    <Icon name={item.icon} size="32" />
                                    <span class="sr-only">{item.name}</span>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </section>

        <Section class="mx-auto max-w-3xl">
            <H2>Experience</H2>
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do
                eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut
                enim ad minim veniam, quis nostrud exercitation ullamco laboris
                nisi ut aliquip ex ea commodo consequat.
            </p>
        </Section>
    </main>
    <Footer />

    <script is:inline src="/js/three.r134.min.js"></script>
    <script is:inline src="/js/vanta.dots.min.js"></script>
    <script is:inline>
        VANTA.DOTS({
            el: "#pixel-bg",
            backgroundAlpha: 0,
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.0,
            minWidth: 200.0,
            scale: 1.0,
            scaleMobile: 1.0,
            showLines: false,
            color: 0x00a2ff,
        });
    </script>
</BaseLayout>
